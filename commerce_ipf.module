    'ipf_add' => array(
      'array_depth' => 3,
      'allowed_actions' => array(),
    ),
    'ipf_add_save' => array(
      'array_depth' => 6,
      'delta_depth' => 3,
      'allowed_actions' => array('ipf_add'),
